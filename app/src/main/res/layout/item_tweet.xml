<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvtimestamp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_above="@+id/tvtweet"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-3dp"
        android:text="15m" />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/ivprofile"
        android:text="Bob Builder"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvtweet"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvname"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/ivprofile"
        android:autoLink="all"
        android:maxLines="11"
        android:text="I'm tired" />

    <ImageView
        android:id="@+id/ivprofile"
        android:layout_width="46dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvtweet"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/tvname"
        android:text="@bobbuild" />

    <ImageView
        android:id="@+id/ivMedia"
        android:layout_width="214dp"
        android:layout_height="105dp"
        android:layout_below="@+id/tvtweet"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="1dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/ivreply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivMedia"
        android:layout_alignParentStart="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:onClick="onReply"
        app:srcCompat="@drawable/ic_baseline_chat_bubble_outline_24" />

</RelativeLayout>