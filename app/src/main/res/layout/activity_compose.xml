<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.Twitter.ComposeActivity">

    <EditText
        android:id="@+id/etcompose"
        android:layout_width="328dp"
        android:layout_height="210dp"
        android:backgroundTint="@color/blue"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Today is my birthday!"
        android:inputType="textMultiLine"
        android:maxLength="280"
        android:minLines="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122" />

    <Button
        android:id="@+id/btntweet"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        android:text="Tweet"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etcompose" />

    <TextView
        android:id="@+id/tvchar"
        android:layout_width="47dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="280"
        app:layout_constraintEnd_toStartOf="@+id/btntweet"
        app:layout_constraintTop_toBottomOf="@+id/etcompose" />
</androidx.constraintlayout.widget.ConstraintLayout>